<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>Ajude com 1 click!</title>


  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag    'site', media: 'all' %>
  <%= stylesheet_link_tag 'site/profile', media: 'all' %>
  <%= javascript_include_tag 'application' %>

  <%= yield :javascripts %>


  <%= csrf_meta_tags %>

</head>
<body>
<%= render partial:"layouts/site_shared/navigation" %>

<div id="wrapper">
  <!-- Sidebar -->
  <div id="sidebar-wrapper"  >
    <ul class="sidebar-nav">
      <li class="sidebar-brand">
        <%= link_to site_profile_dashboard_index_path do %>
            <i class="fa fa-bars fa-fw",  style="padding-right:40px;"></i> Menu
        <% end %>
      </li>
      <li>
        <%= link_to site_profile_dashboard_index_path do %>
            <i class="fa fa-check fa-fw", style="padding-right:40px;"></i> Dashboard
        <% end %>
      </li>
      <li>
        <%= link_to  site_profile_relatives_path do %>
            <i class="fa fa-home fa-fw", style="padding-right:40px;"></i> Familiar
        <% end %>
      </li>
      <li>
        <%= link_to  site_profile_disappeareds_path do %>
            <i class="fa fa-user fa-fw", style="padding-right:40px;"></i> Desaparecido
        <% end %>
      </li>
      <li>
        <%= link_to  site_profile_disappearances_path do %>
            <i class="fa fa-facebook-square fa-fw", style="padding-right:40px;"></i> Desaparecimento
        <% end %>
      </li>
      <li>
        <%= link_to  edit_site_profile_my_datum_path(current_member.id) do %>
            <i class="fa fa-info fa-fw", style="padding-right:40px;"></i> Meus dados
        <% end %>
      </li>
    </ul>
  </div>
  <!-- /#sidebar-wrapper -->

  <!-- Page Content -->
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <%= yield %>
        </div>
      </div>
    </div>
  </div><!-- /#page-content-wrapper -->

</div>!-- /#wrapper -->

</div>
<%= javascript_include_tag 'site' %>
<%= javascript_include_tag 'site/profile' %>
<%= javascript_include_tag 'site/profile/ads' %>

<%= render partial: 'layouts/shared/notifications'  %>

</body>
</html>

