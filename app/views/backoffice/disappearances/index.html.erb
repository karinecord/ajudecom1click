<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
<div class="page-header">
  <h1><%=t('.title', name: @disappeared.name)%></h1>
</div>

<div class="pull-right">
  <%= link_to t('.disappeared'), backoffice_relative_disappeared_path(@relative, @disappeared), :class => "btn btn-default" %>
  <%= link_to t('.new_disappearance'), new_backoffice_relative_disappeared_disappearance_path,:class => "btn btn-default"  %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th> <%=t('.date')%></th>
      <th> <%=t('.hour')%></th>
      <th> <%=t('.notification_found')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disappearances.each do |disappearance| %>
      <tr>
        <td><%= disappearance.date %></td>
        <td><%= disappearance.hour %></td>
        <td><%= disappearance.notification_found ? "Sim":"NÃ£o"   %></td>
        <td><%= link_to t('.show'), [:backoffice, @relative,@disappeared, disappearance]  %></td>
        <td><%= link_to t('.edit'), edit_backoffice_relative_disappeared_disappearance_path(@relative, @disappeared, disappearance) %></td>
        <td><%= link_to t('.destroy'), [:backoffice, @relative,@disappeared, disappearance], method: :delete, data: { confirm: t('.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
  <td class="text-center" colspan="16"> <%=  paginate @disappearances%></td>
  <br>
  </tfoot>
</table>

<br>
</div>
</div>

<% if flash[:notice] %>
    <script>
        $.notify(" <%= notice %> " , "success");
    </script>
<% end %>