<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <% if flash[:notice] %>
        <div class="alert alert-success"><%= flash[:notice] %></div>
    <% end %>
    <div class="page-header">
      <h1><%=t('.title')%></h1>
    </div>
    <table class="table table-striped">
      <thead>
      <tr>
        <th> <%=t('.date')%></th>
        <th> <%=t('.hour')%></th>
        <th> <%=t('.notification_found')%></th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% @disappearances.each do |disappearance| %>
          <tr>
            <td><%= disappearance.date %></td>
            <td><%= disappearance.hour %></td>
            <td><%= disappearance.notification_found ? "Sim":"NÃ£o"   %></td>
            <td><%= link_to t('.show'),backoffice_relative_disappeared_disappearance_path(disappearance.disappeared.relative, disappearance.disappeared,disappearance) %></td>
            <td><%= link_to t('.edit'), edit_backoffice_relative_disappeared_disappearance_path(disappearance.disappeared.relative, disappearance.disappeared, disappearance) %></td>
            <td><%= link_to t('.destroy'), backoffice_relative_disappeared_disappearance_path(disappearance.disappeared.relative, disappearance.disappeared, disappearance), method: :delete, data: { confirm: t('.confirm') } %></td>
          </tr>
      <% end %>
      </tbody>
      <tfoot>
      <td class="text-center" colspan="16"> <%=  paginate @disappearances%></td>
      <br>
      </tfoot>
    </table>

    <br>
  </div>
</div>

