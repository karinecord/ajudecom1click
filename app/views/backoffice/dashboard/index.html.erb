<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <h1>Olá, bem-vindo ao ajude com um click!</h1>
    <div class="row">
        <div class="col-xs-6 col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <div><i class= "fa fa-users fa-5x"></i>Número desaparecido(s): <%= @numdisappeared%> </div>
            </div>
          </div>
        </div>
        <div class="col-xs-6 col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <div><i class= "fa fa-facebook-f fa-5x"></i>Número desaparecimento(s): <%= @numdisappearance %></div>
            </div>
          </div>
        </div>
        <div class="col-xs-6 col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <div><i class= "fa fa-home fa-5x"></i>Número familiar(es): <%= @numrelative %></div>
            </div>
          </div>
        </div>

      </div>
      <div class="row">
        <!--Large devices Desktops col-lg (≥1200px)-->
        <div class="col-12 col-lg-6">
          <div class="panel panel-default">
            <div class="panel-heading">Último(s) desaparecido(s)</div>
            <div class="panel-body">
              <table class="table table-striped table-hover">
                <thead>
                <tr>
                  <th style="width:37%;">Desaparecido(s)</th>
                  <th style="width:36%;">Data cadastro</th>
                <tbody>
                <%  @disappeareds.each do |disappeared|%>
                <tr>
                  <td>
                  <% unless disappeared.photos.empty? %>
                      <%= link_to(image_tag(disappeared.photos.first.image_url(:thumbnail), alt: 'Image'), disappeared.photos.first.image_url, target: '_blank', class: 'img-responsive') %>
                  <% end %>
                  <%= disappeared.name %>
                  </td>
                  <td> <%= disappeared.created_at %> </td>
                </tr>
                <% end %>

                </thead>
                <tbody>
                </table>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-6">
          <div class="panel panel-default">
            <div class="panel-heading">Último(s) desaparecimento(s)</div>
            <div class="panel-body">
              <table class="table table-striped table-hover">
                <thead>
                <tr>
                  <th style="width:37%;">Desaparecimento(s)</th>
                  <th style="width:36%;">Data do desaparecimento</th>
                <tbody>
                <% @disappearances.each do |disappearance| %>
                    <tr>
                      <td><%= disappearance.name %></td>
                      <td><%= disappearance.date %> </td>
                    </tr>
                <% end %>
                <tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  <div class="row">
    <!--Large devices Desktops col-lg (≥1200px)-->
    <div class="col-12 col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading">Últimas notificações no Facebook</div>
        <div class="panel-body">
          <table class="table table-striped table-hover">
            <thead>
            <tr>
              <th style="width:37%;">Desaparecido(s)</th>
              <th style="width:36%;">Data cadastro</th>
            <tbody>
                <%  @disappeared_notfication_face.each do |disappeared|%>
                <tr>
                  <td>
                    <% unless disappeared.photos.empty?  %>
                      <%= link_to(image_tag(disappeared.photos.first.image_url(:thumbnail), alt: 'Image'), disappeared.photos.first.image_url, target: '_blank', class: 'img-responsive') %>

                    <% end %>
                    <%= disappeared.name %>
                  </td>
                  <td>  <%= disappeared.created_at %> </td>
                </tr>
            <% end %>
            </thead>
            <tbody>
            </table>
        </div>
      </div>
    </div>
    <div class="col-12 col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading">Último(s) encontrados</div>
        <div class="panel-body">
          <table class="table table-striped table-hover">
            <thead>
            <tr>
              <th style="width:37%;">Desaparecimento(s)</th>
              <th style="width:36%;">Data do desaparecimento</th>
            <tbody>
            <% @disappearance_notification_found.each do |disappearance| %>
                <tr>
                  <td><%= disappearance.disappeared.name %></td>
                  <td><%= disappearance.date %> </td>

                </tr>
            <% end %>
            <tbody>
            </table>
        </div>
      </div>
    </div>
  </div>
</div>

</div>

</body>



<!-- /.container-fluid -->

<!-- /#page-wrapper -->
